import processing.video.*;
import processing.sound.*;
PImage frame;
//Declare Movie object
Movie movie; 
//Declare soundfile object
SoundFile sound;

void setup() {
  size(700, 550);
  frame = loadImage("Mirror Frame.png");
  sound = new SoundFile(this, "Michael_Jackson_-_Man_In_The_Mirror_8-Bit_Edit[Mp3Converter.net].mp3");
  movie = new Movie(this, "brushing teeth.mp4"); 
  
  //Start movie playing
  movie.loop();
  //play sound
  sound.loop();
  sound.rate(1.25);
}

// Read new frames from movie
void movieEvent(Movie movie) {
  movie.read();
}

void draw() {
  background(0);
  //Display Frame
  tint(#f4d942);
  imageMode(CORNER);
  image(frame,0,0,width, height);
  //Display movie
  imageMode(CENTER);
  image(movie, width/2, height/2);
}
